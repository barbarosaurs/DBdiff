{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:path:default",
    "core:event:default",
    "core:window:default",
    "core:app:default",
    "core:resources:default",
    "core:menu:default",
    "core:tray:default",
    "core:window:allow-set-title",
    "clipboard-manager:allow-write-text",
    "fs:allow-mkdir",
    "fs:default",
    "fs:allow-stat",
    "fs:allow-create",
    {
      "identifier": "fs:allow-appdata-write",
      "allow": [
        {
          "path": "$APPDATA/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-stat",
      "allow": [
        {
          "path": "$APPDATA/**"
        }
      ]
    },
    "clipboard-manager:default"
  ]
}